@model Educator

@{
    ViewData["Title"] = "Eğitmen Sil";
}

<div class="row">
    <div class="col-8">
        <form action="" method="post">
            <input type="hidden" asp-for="EducatorId">
            <div class="card my-2 w-50 text-center">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Ad: @Html.DisplayFor(m=>Model.EducatorFirstName)</li>
                    <li class="list-group-item">Soyad: @Html.DisplayFor(m=>Model.EducatorLastName)</li>
                    <li class="list-group-item">Soyad: @Html.DisplayFor(m=>Model.EducatorEmail)</li>
                </ul>
            </div>
            <hr>
            <a asp-controller="Educator" asp-action="Index" class="btn btn-sm btn-primary">İptal</a>
            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
        </form>
    </div>
    <div class="col-4">
        <h4>Verdiği Kurslar</h4>
        <ul>
            @foreach(var course in Model.Courses){
                <li>@course.CourseName</li>    
            }
        </ul>
    </div>
</div>