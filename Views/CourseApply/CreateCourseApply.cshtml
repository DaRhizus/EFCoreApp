@model CourseApply

@{
    ViewData["Title"] = "Create Application";
}

<h1 style="color:chocolate;">Kurs Ekle</h1>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-controller="CourseApply" asp-action="CreateCourseApply" method="post">
            <div asp-validation-summary="All"></div>
            <div class="mb-3 w-50">
                <label asp-for="StudentId" class="form-labe">Öğrenciler</label>
                <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <div class="mb-3 w-50">
                <label asp-for="CourseId" class="form-labe">Kurslar</label>
                <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-select">
                    <option value="">Seçiniz</option>
                </select>
            </div>
            <button type="submit" class="btn btn-outline-success">Kaydet</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>